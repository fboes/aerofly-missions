# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120

[*.html]
max_line_length = 720

[*.{tmc,mcf,pln}]
indent_size = 4

[*.{md,svg}]
trim_trailing_whitespace = false
